<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mjayp_000.stuckinthemud.GameActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:id="@+id/current_player_turn_string" />

    <ImageView
        android:id="@+id/dice_1_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/current_player_turn_string"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/dice_2_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/current_player_turn_string"
        android:layout_toRightOf="@+id/dice_1_image"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/dice_3_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/current_player_turn_string"
        android:layout_toRightOf="@+id/dice_2_image"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/dice_4_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/current_player_turn_string"
        android:layout_toRightOf="@+id/dice_3_image"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/dice_5_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/current_player_turn_string"
        android:layout_toRightOf="@+id/dice_4_image"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/roll_dice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dice_1_image"
        android:layout_marginTop="30dp"
        android:maxWidth="300dp"
        android:text="@string/roll_dice_string"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="@drawable/blue_action_button"
        android:gravity="center"
        android:onClick="rollClickButton" />

</RelativeLayout>

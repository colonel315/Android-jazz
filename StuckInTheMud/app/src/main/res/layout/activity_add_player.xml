<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mjayp_000.stuckinthemud.AddPlayerActivity">

    <TextView
        android:id="@+id/add_player_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="@string/add_player" />

    <EditText
        android:id="@+id/add_player_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".70"
        android:layout_below="@+id/add_player_heading"
        android:layout_marginTop="25dp"
        android:maxWidth="300dp" />

    <Button
        android:id="@+id/add_player_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_player_input"
        android:layout_marginTop="20dp"
        android:maxWidth="300dp"
        android:text="Add Player"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="@drawable/blue_action_button"
        android:gravity="center"
        android:onClick="processNewPlayer"/>

    <Button
        android:id="@+id/cancel_add_player_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_player_submit"
        android:layout_marginTop="20dp"
        android:maxWidth="300dp"
        android:text="Cancel"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="@drawable/black_action_button"
        android:gravity="center"
        android:onClick="cancelButtonClick"/>

</RelativeLayout>

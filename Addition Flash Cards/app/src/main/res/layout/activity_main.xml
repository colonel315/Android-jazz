<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity"
                android:id="@+id/mainBackground"
                android:background="#accecd">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/additionProblem"
        android:text="@string/addition_problem"
        android:textColor="#8a151b"
        android:layout_above="@+id/userAnswer"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="52dp"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userAnswer"
        android:inputType="text"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit_button"
        android:id="@+id/submitButton"
        android:layout_marginTop="61dp"
        android:background="@drawable/submit_button_layout"
        android:textColor="#accecd"
        android:textSize="20sp"
        android:onClick="checkAnswer"
        android:layout_below="@+id/userAnswer"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>

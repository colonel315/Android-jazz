<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ninjacoder.stuckinthemud" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddPlayerActivity"
            android:label="@string/title_activity_add_player"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".PlayGameActivity"
            android:label="@string/title_activity_play_game"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".PlayerList"
            android:label="@string/title_activity_player_list"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
